<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-12">
    <div class="header clearfix">
      <h1 class="pull-left">Search Registered Bicycles</h1>
    </div>
    <div class="well">
      <%= form_for @search_form, html: {class: "form-horizontal"}, url: search_path, method: :post do |f| %>
        <% if @search_form.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @search_form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="input-group">
          <%= f.text_field :query, class: "form-control", placeholder: "Search by make, model, serial number, color, etc..." %>
          <span class="input-group-btn">
            <%= f.submit 'Search', class: "btn btn-primary" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @bikes && @bikes.size > 0 %>
  <div class="row">
    <div class="col-lg-12 col-12">
      <div class="header clearfix">
        <h1 class="pull-left">Search Results</h1>
      </div>
      <div class="well">
        <%= render 'bikes/table' %>
      </div>
    </div>
  </div>
<% end %>

