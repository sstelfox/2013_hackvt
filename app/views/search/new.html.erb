<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-12">
    <h3>Search Registered Bicycles</h3>
    <div class="well">
      <%= form_for @search_form, html: {class: "form-horizontal"}, url: search_path, method: :post do |f| %>
        <% if @search_form.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @search_form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label "Serial Number", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :serial, class: "form-control", placeholder: "Serial number" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-8 col-lg-offset-4">
            <%= f.submit 'Search', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <% if @bikes && @bikes.size > 0 %>
      <h4>Results</h4>
      <%= render 'bikes/table' %>
    <% end %>
  </div>
</div>
