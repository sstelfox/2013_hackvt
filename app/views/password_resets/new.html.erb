<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-12">
    <%= form_for @password_reset_form, url: reset_password_path, html: {class: "form-horizontal well"} do |f| %>
      <% if @password_reset_form.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @password_reset_form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <fieldset>
        <div class="form-group">
          <%= f.label "Email address", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Password", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Confirm password", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
          </div>
        </div>
      </fieldset>
      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-4">
          <%= f.submit 'Reset password', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
