
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-12">
    <h3>Login</h3>
    <div class="well">
      <%= form_for(@login_form, url: login_path, html: { class: 'form-horizontal' }) do |f| %>
        <% if @login_form.errors.any? %>
          <ul>
            <% @login_form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.label "Email address", class: "col-lg-4 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email address' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Password", class: "col-lg-4 control-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-8 col-lg-offset-4">
            <%= f.button "Log in", class: 'btn btn-primary' %>
            <a href="#">Forgot password</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
