
<div class="row">
  <div class="col-lg-7 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-12 col-12">
    <div class="header clearfix">
      <h1 class="pull-left">Login</h1>
    </div>
    <div class="well">
      <%= form_for(@login_form, url: login_path, html: { class: 'form-horizontal' }) do |f| %>
        <% if @login_form.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @login_form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label "Email address", class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email address' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Password", class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-9 col-lg-offset-3">
            <%= f.button "Log in", class: 'btn btn-primary' %>
            <%= link_to "Forgot password", reset_password_path, class: "btn btn-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-5 col-sm-12 col-12">
    <div class="header clearfix">
      <h1 class="pull-left">Don't have an account?</h1>
    </div>
    <p>Creating a new account is quick and easy. You just need a bike to register.</p>
    <%= link_to "Create an account", register_path, class: "btn btn-primary" %>
  </div>
</div>
