<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-12">
    <%= form_for @registration_form, html: {class: "form-horizontal well"} do |f| %>
      <% if @registration_form.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @registration_form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Begin bike stuff -->
      <fieldset>
        <div class="fieldset-header">
          <h3>Register your first bike</h3>
          <p>You'll be able to edit this and add more bikes later.</p>
        </div>
        <div class="form-group">
          <%= f.label "Serial Number", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :serial, class: "form-control", placeholder: "Serial number" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Frame Make", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :frame_make, class: "form-control", placeholder: "Frame make" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Frame Model", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :frame_model, class: "form-control", placeholder: "Frame model" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Color", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :color, class: "form-control", placeholder: "Color" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Description", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_area :description, rows: "5", class: "form-control", placeholder: "Description" %>
          </div>
        </div>
      </fieldset>
      <!-- End bike stuff -->

      <!-- Begin account stuff -->
      <fieldset>
        <div class="fieldset-header">
          <h3>Contact information</h3>
          <p>We'll create an account for you so you can view your registered bikes, report it if any go missing and also be notified if someone reports it found.</p>
          <p>We respect your privacy, this information will never be used for evil or publicly displayed.</p>
        </div>
        <div class="form-group">
          <%= f.label "First name", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Last name", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Email address", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Phone #", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.email_field :phone, class: "form-control", placeholder: "802-761-5555" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Password", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Confirm password", class: "col-lg-4 control-label" %>
          <div class="controls col-lg-8">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
          </div>
        </div>
      </fieldset>
      <!-- End account stuff -->

      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-4">
          <%= f.submit 'Register', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
