<%= form_for @bike, html: {class: "form-horizontal well"} do |f| %>
  <div class="form-group">
    <%= f.label "Serial Number", class: "col-lg-4 control-label" %>:
    <div class="controls col-lg-8">
      <%= f.text_field :serial, class: "form-control" %><br />
    </div>
  </div>
<% end %> 
<form class="form-horizontal well">
  <div class="form-group">
    <label class="col-lg-4 control-label" for="bike_serial">Serial Number</label>
    <div class="controls col-lg-8">
      <input id="bike_serial" type="text" class="form-control" value="129PDS30234902384AN283">
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-4 control-label" for="bike_make">Make</label>
    <div class="controls col-lg-8">
      <input id="bike_make" type="text" class="form-control" value="Mongoose">
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-4 control-label" for="bike_model">Model</label>
    <div class="controls col-lg-8">
      <input id="bike_model" type="text" class="form-control" value="Montana">
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-4 control-label" for="bike_color">Color</label>
    <div class="controls col-lg-8">
      <input id="bike_color" type="text" class="form-control" value="Orange">
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-4 control-label" for="bike_desc">Description</label>
    <div class="controls col-lg-8">
      <textarea id="bike_desc" class="form-control" rows="5">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-4">
      <button type="submit" class="btn btn-primary">Register Bike</button>
    </div>
  </div>
</form>
