<div class="row">
  <div class="col-lg-12 col-12">
    <% if @bikes.size > 0 %>
      <div class="header clearfix">
        <div class="header-actions pull-right">
          <%= link_to "Add New Bike", new_bike_path, class: "btn btn-success" %>
        </div>
        <h1 class="pull-left">My Bikes</h1>
      </div>
    <% end %>
    <div class="well">
      <% if @bikes.size > 0 %>
        <%= render 'bikes/table' %>
      <% else %>
        <h1>Get started</h1>
        <p>Looks like you haven't added anything yet.</p>
        <%= link_to "Register a bike", new_bike_path, class: "btn btn-lg btn-success" %>
      <% end %>
    </div>
  </div>
</div>